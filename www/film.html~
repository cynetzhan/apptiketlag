    <script src="js/custom.js"></script>
    <script>
$.ajax({
    url:'http://pemesanantiketbioskop88pekanbaru.890m.com/jsonfilm.php',
    timeout:5000,
    success: function(res){
	  var obj = JSON.parse(res);
	  console.log(obj);
	  for(i=1;i<=obj['totalfilm'];i++){
		var film="<table>";
		film=film+"<tr><td rowspan='3'><img src='http://pemesanantiketbioskop88pekanbaru.890m.com/img/"+obj[i]['idfilm']+".jpg' class='film-thumb'/></td><td><span class='film-judul'>"+obj[i]['nama']+"</span></td></tr>";
		film=film+"<tr><td><span class='film-waktu'>";
		for(j=0;j<obj[i]['totaljam'];j++){film=film+"["+obj[i]['jam'][j]+"]";}
		film=film+"</span></td></tr>";
		if(obj[i]['status']=="PLAY")
		 film=film+"<tr><td><span class='film-link'><a href='bookstep1.html?film="+obj[i]['idfilm']+"' class='btn btn-info btn-sm'>Booking Now</a> <a href='filmdeskripsi.html' class='btn btn-warning btn-sm'>Selengkapnya</a></span></td></tr>";
		else 
		 film=film+"<tr><td><span class='film-link'><a href='filmdeskripsi.html"+obj[i]['idfilm']+"' class='btn btn-warning btn-sm'>Selengkapnya</a></span></td></tr>";
		film=film+"</table>";
		newlist=$("<li class='list-group-item'></li>").append(film);
		if(obj[i]['status']=="PLAY")
		  $("ul#playing").append(newlist); 
		else 
		  $("ul#coming").append(newlist);
	  }
      
    },
    //error: viewLoading()
  });  
</script>
